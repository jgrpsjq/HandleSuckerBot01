        public void saveData (HashMap < String, Person > gameData)  {


            FileOutputStream f = new FileOutputStream(GAME_DATA);
            ObjectOutputStream o = new ObjectOutputStream(f);
            o.writeObject(gameData);
            o.close();
            f.close();
        }

